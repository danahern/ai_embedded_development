{
  "mcpServers": {
    "embedded-probe": {
      "command": "./claude-mcps/embedded-probe/target/release/embedded-probe"
    },
    "zephyr-build": {
      "command": "./claude-mcps/zephyr-build/target/release/zephyr-build",
      "args": [
        "--workspace",
        "."
      ]
    },
    "esp-idf-build": {
      "command": "./claude-mcps/esp-idf-build/target/release/esp-idf-build",
      "args": [
        "--projects-dir",
        "./esp-dev-kits/examples"
      ]
    },
    "elf-analysis": {
      "command": "./claude-mcps/elf-analysis/target/release/elf-analysis",
      "args": [
        "--workspace",
        "."
      ]
    },
    "knowledge": {
      "command": "./claude-mcps/knowledge-server/target/release/knowledge-server",
      "args": [
        "--workspace",
        "."
      ]
    },
    "saleae-logic": {
      "command": "./claude-mcps/saleae-logic/.venv/bin/python",
      "args": [
        "-m",
        "saleae_logic"
      ],
      "cwd": "./claude-mcps/saleae-logic"
    },
    "hw-test-runner": {
      "command": "./claude-mcps/hw-test-runner/.venv/bin/python",
      "args": [
        "-m",
        "hw_test_runner"
      ],
      "cwd": "./claude-mcps/hw-test-runner"
    }
  }
}
